{
  "name": "hr-team",
  "version": "0.0.1",
  "type": "module",
  "description": "Hailer workflows for HR Team (FI)",
  "scripts": {
    "pull": "hailer-sdk ws-config pull --verbose",
    "push": "hailer-sdk ws-config push --verbose",
    "push:force": "hailer-sdk ws-config push --force --verbose",
    "workflows-push": "hailer-sdk ws-config workflows push --verbose",
    "workflows-sync": "hailer-sdk ws-config workflows sync --verbose",
    "workflows-sync:force": "hailer-sdk ws-config workflows sync --force --verbose",
    "fields-push": "hailer-sdk ws-config fields push --verbose",
    "fields-push:force": "hailer-sdk ws-config fields push --force --verbose",
    "phases-push": "hailer-sdk ws-config phases push --verbose",
    "phases-push:force": "hailer-sdk ws-config phases push --force --verbose",
    "groups-push": "hailer-sdk ws-config groups push --verbose",
    "groups-push:force": "hailer-sdk ws-config groups push --force --verbose",
    "teams-push": "hailer-sdk ws-config teams push --verbose",
    "teams-push:force": "hailer-sdk ws-config teams push --force --verbose",
    "insights-push": "hailer-sdk ws-config insights push --verbose",
    "insights-push:force": "hailer-sdk ws-config insights push --force --verbose",
    "templates-push": "hailer-sdk ws-config templates push --verbose",
    "templates-sync": "hailer-sdk ws-config templates sync --verbose",
    "templates-sync:force": "hailer-sdk ws-config templates sync --force --verbose",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "sdk-update": "npm install @hailer/sdk@latest && npm run postinstall",
    "mcp-start": "hailer-mcp",
    "mcp-update": "npm install @hailer/mcp@latest && npm run postinstall",
    "postinstall": "rm -rf ./.claude && cp -r ./node_modules/@hailer/mcp/.claude ./ && rm -f CLAUDE.md && cp ./node_modules/@hailer/mcp/CLAUDE.md ./ && rm -f ./workspace/hailer.d.ts && cp ./node_modules/@hailer/sdk/dist/types/hailer.d.ts ./workspace/"
  },
  "devDependencies": {
    "@hailer/mcp": "^0.1.14",
    "@hailer/sdk": "latest",
    "@types/node": "^22.0.0",
    "@vitest/ui": "^4.0.14",
    "typescript": "^5.7.0",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "@socket.io/component-emitter": "^3.1.2"
  }
}
